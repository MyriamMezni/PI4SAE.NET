
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/EspaceParent.cshtml";
}

@model PI4SAE.Models.Rdv

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Rendez-vous</h4>

                <div class="form-group">
                    <center>
                        <b>Titre</b>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </center>
                </div>
                <div class="form-group">
                    <center>
                        <b>Date</b>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.dateRdv, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </div>
                    </center>
                </div>
                <div class="form-group">
                    <center>
                        <b>Cout</b>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.idkg, (SelectList)ViewData["kinderGartens"])
                        </div>
                    </center>
                </div>
                <div class="form-group">
                    <center>
                        <div class="col-md-4">
                            <!--<input type="submit" value="Create" class="btn btn-success" />-->
                            <button class="btn btn-success"><span class="fa fa-plus"></span> Confirm</button>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>
}


