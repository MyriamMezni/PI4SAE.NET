               //bottom: 'bottom',
            },
            series: [
               {
//                       name: 'a',
                  type: 'pie',
                  radius:['40%', '60%'],
                    data: [
                      @foreach (var item in ViewBag.rdvStat)
                    {

                        <text>
                        { name: "@(item.kinderGarten.nameKinderGarten)", value: @(item.count) },
